services:
  uptime-kuma:
    image: louislam/uptime-kuma:1
    container_name: uptime-kuma
    restart: always
    volumes:
      - {{ project_path }}/services/uptime-kuma/data:/app/data
      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "3001:3001"
    networks:
      - homelab
{% for network in uptime_kuma_extra_networks | default([]) %}
      - {{ network }}
{% endfor %}
