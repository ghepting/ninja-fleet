services:
  technitium-dns:
    container_name: technitium-dns
    image: technitium/dns-server:latest
    network_mode: "host"
    environment:
      - DNS_SERVER_DOMAIN=dns.{{ primary_domain }}
      - TZ={{ timezone | default('America/New_York') }}
    volumes:
      - /opt/homelab/services/technitium/config:/etc/dns:rw
    restart: unless-stopped
